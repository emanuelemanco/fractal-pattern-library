<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{{ _target.title }} | Pattern Library</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link href="{{ path '/css/style.css' }}?v=0.4" rel="stylesheet">
        <script src="{{ path '/js/vendor/modernizr-custom.js' }}"></script>
    </head>
    <body class="{{_target.context.page_theme}}">
        <div class="skiplinks">
            <a href="#navigation-primary" class="show-on-focus skiplink">Navigation</a>
            <a href="#main-content" class="show-on-focus skiplink">Main Content</a>
        </div>

        {{> '@cookie'}}
        {{> '@header'}}
        {{> '@hero' _target.context}}

        <main id="main-content" class="main-content" tabindex="-1">
            {{{ yield }}}
        </main>

        {{render '@footer'}}

        <script src="{{ path '/js/vendor.bundle.js' }}?v=0.2"></script>
        <script src="{{ path '/js/app.bundle.js' }}?v=0.2"></script>
    </body>
</html>
